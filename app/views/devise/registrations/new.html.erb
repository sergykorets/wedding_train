<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "login100-form validate-form flex-sb flex-w") do |f| %>
  <%= devise_error_messages! %>

  <div class="limiter">
    <div class="container-login100 text-center">
      <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33 text-center">
					<span class="login100-form-title p-b-53">
						Зареєструватися за допомогою
					</span>
        <hr/>
        <div class="text-center">
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to omniauth_authorize_path(resource_name, provider), {class: "btn-face m-b-20"} do %>
                <i class="fa fa-facebook-official"></i>
                Facebook
              <%- end %>
            <% end -%>
          <% end -%>
        </div>
        <hr/>
        <h2>або</h2>
        <hr/>
        <div class="p-t-31 p-b-9">
						<span class="txt1">
							Повне ім'я
						</span>
        </div>
        <div class="wrap-input100 validate-input" data-validate = "Username is required">
          <%= f.text_field :name, value: params[:name], autofocus: true, class: 'input100'  %>
          <span class="focus-input100"></span>
        </div>

        <div class="p-t-31 p-b-9">
						<span class="txt1">
							Email
						</span>
        </div>
        <div class="wrap-input100 validate-input" data-validate = "Username is required">
          <%= f.email_field :email, autocomplete: "email", class: 'input100'  %>
          <span class="focus-input100"></span>
        </div>

        <div class="p-t-13 p-b-9">
						<span class="txt1">
							Пароль
						</span>
        </div>
        <div class="wrap-input100 validate-input" data-validate = "Password is required">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> символів мінімум)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'input100' %>
          <span class="focus-input100"></span>
        </div>

        <div class="p-t-13 p-b-9">
						<span class="txt1">
							Пароль (повторити)
						</span>
        </div>
        <div class="wrap-input100 validate-input" data-validate = "Password is required">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input100' %>
          <span class="focus-input100"></span>
        </div>
        <hr/>
        <div class="container-login100-form-btn m-t-17">
          <%= f.submit "Зареєструватися", class: "login100-form-btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>